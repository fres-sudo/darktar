# Darktar Configuration
# Copy this file to .env and modify as needed

# Server Configuration
DARKTAR_PORT=8080
DARKTAR_HOST=0.0.0.0

# Storage Configuration
DARKTAR_STORAGE_PATH=./data/storage
DARKTAR_DATABASE_PATH=./data/darktar.db

# Security
# IMPORTANT: Change this in production!
DARKTAR_ADMIN_TOKEN=your-secure-admin-token-here

# Optional: Base URL (used in API responses)
# DARKTAR_BASE_URL=https://packages.yourcompany.com
